<view class="selectCity">

  <!-- 导航 -->
  <view class='tbar tbar-primary tbar-absolute' style='padding-top: {{barHeight}}rpx'>
    <view class='header'>
      <navigator class='header-back header-back-white' open-type="navigateBack"></navigator>
      <view class='title'>选择城市</view>
    </view>
  </view>

  <view class='tbar-height'></view>

  <!-- 搜索 -->
  <view class='search-input'>
    <view class='input input-search-icon flex flex-align-middle flex-justify-center'>
      <image src='../../images/icon_search.png'></image>
      <input type='text' placeholder='城市/拼音'></input>
    </view>
  </view>

  <!-- 当前定位 -->
  <view style='margin: 0 20rpx'>当前定位：广州</view>

  <!-- 最近定位 -->
  <view class='search-module search-margin-top'>
    <view class='search-header flex flex-justify-between'>
      <text class="title">最近定位</text>
    </view>
    <view class='search-module-content flex flex-wrap'>
      <navigator url='' class='flex'>
       <image src='../../images/icon_position.png'></image>
       <text>广州</text>
      </navigator>
    </view>
  </view>

  <!-- 热门城市 -->
  <view class='search-module search-margin-top search-module-cloum3'>
    <view class='search-header flex flex-justify-between'>
      <text class="title">热门城市</text>
    </view>
    <view class='search-module-content flex flex-wrap'>
      <navigator url=''>惠州</navigator>
      <navigator url=''>广州</navigator>
      <navigator url=''>清远</navigator>
      <navigator url=''>珠海</navigator>
      <navigator url=''>江门</navigator>
      <navigator url=''>阳江</navigator>
      <navigator url=''>佛山</navigator>
    </view>
  </view>

  <!-- 热门推荐 -->
  <view class='scroll'>
    <view class='my-title flex flex-align-middle'>
      <image src='../../images/icon_hot.png'></image>
      <text>热门推荐</text>
    </view>
    <scroll-view scroll-x style="height: 181rpx;">
      <view class='flex'>
        <navigator url='' class='item'>
          <image src='../../testImg/img6.png' lazy-load="true"></image>
        </navigator>
        <navigator url='' class='item'>
          <image src='../../testImg/img7.png' lazy-load="true"></image>
        </navigator>
        <navigator url='' class='item'>
          <image src='../../testImg/img8.png' lazy-load="true"></image>
        </navigator>
        <navigator url='' class='item'>
          <image src='../../testImg/img9.png' lazy-load="true"></image>
        </navigator>
      </view>
    </scroll-view>
  </view>

</view>