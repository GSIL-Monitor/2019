page {
  background: #F4F4F4;
}
.fast-title{
  font-size:36px;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(51,51,51,1);
  line-height:60px;
}

/* 头部导航 */
.tbar {
  padding: 0 25rpx 10rpx;
}

.tbar-address {
  font-size: 26rpx;
}

.tbar-address image {
  width: 18rpx;
  height: 11rpx;
  margin-left: 18rpx;
}

.tbar-search image {
  width: 31rpx;
  height: 30rpx;
  margin-right: 10rpx
}

.tbar-search {
  padding: 0 10rpx;
  margin-left: 28rpx;
  height:50rpx;
  background:rgba(255,255,255,1);
  border-radius:4rpx;
  color: #C6C6C6;
  font-size:26rpx
}

/* 轮播 */
.banner {
  position: relative;
}

.banner swiper {
  height: 250rpx;
}

.banner .indicator-num {
  position: absolute;
  bottom: 10rpx;
  right: 20rpx;
  width:52rpx;
  height:30rpx;
  line-height: 30rpx;
  background:rgba(0,0,0,0.5);
  border-radius:2rpx;
  font-size:24rpx;
  color: #fff;
  text-align: center;
}

/* 分类导航 */
.classification {
  padding: 30rpx 20rpx 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.class1 .item {
  /* width: 20%; */
  margin-right: 65rpx;
  margin-bottom: 45rpx;
}

.class1 .item:nth-child(5n) {
  margin-right: 0;
}

.class1 image {
  width: 90rpx;
  height: 90rpx;
}

.class1 text {
  margin-top: 10rpx;
  font-size: 28rpx;
}

.class2 {
  background: #F4F4F4;
  padding: 15rpx;
}

.class2 .item-block {
  background: #fff;
  padding: 15rpx;
  width:216rpx;
  height:234rpx;
  display: flex;
  flex-direction: column;
}

.class2 .item-block text {
  font-size: 36rpx;
}

.class2 .item-block image {
  margin-top: 40rpx;
  width: 111rpx;
}

.class2 .item-group {
  margin-left: 20rpx;
}

.class2 .item-group view {
  background: #fff;
  font-size: 36rpx;
  color: #666666;
  margin-bottom: 20rpx;
  width:216rpx;
  height:107rpx;
  padding: 0 15rpx;
}

.class2 .item-group view:last-child {
  margin-bottom: 0;
}

/* 热门推荐 */
.scroll {
  padding: 30rpx 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.scroll .item {
  margin-right: 20rpx;
}

.scroll .item image {
  width: 315rpx;
  height: 181rpx;
  border-radius: 6rpx;
}

/* 热门目的地 */
.product {
  background: #fff;
  padding: 30rpx 20rpx;
}

.product .item {
  border-bottom: 1rpx solid #E0E0E0;
  padding-bottom: 34rpx;
  margin-bottom: 20rpx;
}

.product .item:last-child {
  border-bottom: none;
  padding-bottom: 0;
  margin-bottom: 0;
}

.product .item-img {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.product .item-group {
  margin-top: 25rpx;
}

.product .title {
  font-size:34rpx;
}

.product .location {
  color: #FF6128;
}

.product .location image {
  width: 36rpx;
  height: 29rpx;
  margin-right: 12rpx;
}

.product .item-des {
  margin-top: 25rpx;
  color: #999999;
  line-height: 1.5;
  font-size: 26rpx;
}

