page {
  background: #F4F4F4;
}
.tbar {
  padding: 0 25rpx 11rpx;
}
.wx-swiper-dots.wx-swiper-dots-horizontal{
margin-bottom: 115rpx;
}
.custom{
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
  background: #2C5CFF;
}
.custom text{
  color: #fff;
  font-size: 34rpx;
  font-weight: 500;
  max-width: 280rpx;
}


.hot-box{
margin-top: 20rpx;
width: 100%;
height: 487rpx;
background-color: white;
}
.hot-box-top{
width: 100%;
display: flex;
flex-direction: row;
justify-content: space-between;
padding: 30rpx;
font-size: 34rpx;
color: #333333;
}

.scroll-box{
width: 100%;
white-space: nowrap;
display: flex;
}
.scroll-view-item{
width: 315rpx;
display: inline-block;
height: 181rpx;
margin-left: 20rpx;
}
.scroll-view-item:last-child{
  margin-right: 20rpx;
}
.scroll-view-img{
width: 315rpx;
height: 181rpx;
}
.container{
  text-align: center;
  height: 330rpx;
}
.form{
  position: absolute;
  left: 30rpx;
  height: 450rpx;
  width: 690rpx;
  background-color: white;
  border-radius: 11rpx;
  margin-top: -120rpx;
  z-index: 1000;
}
.form-item {
  margin-bottom: 50rpx;
}

.form image{
  width: 26rpx;
  height: 30rpx;
}
.form text{
  font-size: 26rpx;
  padding-right: 5rpx; 
}
.seach{
  width: 620rpx;
  height: 90rpx;
  border-radius: 45rpx;
  border: none;
  background:linear-gradient(to right,rgba(255,86,12,1),rgba(255,131,31,1));
}
.total{
  font-size: 24rpx;
  color: #FF7B4B;
}
.start{
  padding-left: 30rpx;
}
.end{
  padding-right: 30rpx;
}
.line{
  border-top: 1px solid #FF7B4B;
  margin-top: 8rpx;
  width: 111rpx;
}
.scroll {
  padding: 30rpx 20rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.scroll .item {
  margin-right: 20rpx;
}
