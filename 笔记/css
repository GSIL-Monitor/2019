	width:100px;
	height:100px;
	background:red;
	position:relative;
}
.menu{
	position:absolute;
	visibility:hidden;  //绝对定位于父级元素的 左100%  父级元素有多宽 向左偏移这么多
	left:100%;
}
.ref:hover>.menu{
	visibility:visible;
}

 <div class="ref">
  <div class="menu">
    Popout menu
  </div>
</div>


